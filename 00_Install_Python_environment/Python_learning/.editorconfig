# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file, comment out the next line if this is not the top-most editorconfig
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_size = 4
indent_style = space
max_line_length = 120

# Feature files
[*.feature]
indent_size = 2
indent_style = space
